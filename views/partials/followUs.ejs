<div class="mb-3">
  <div class="section-title mb-0">
    <h4 class="m-0 text-uppercase font-weight-bold">Follow Us</h4>
  </div>

  <div class="bg-white border border-top-0 p-3">
    <% socialFollows.forEach((socialFollow) => { %>
    <a
      href=""
      class="d-block w-100 text-white text-decoration-none mb-3"
      style="background: <%= socialFollow.color %>"
    >
      <i
        class="fab <%= socialFollow.icon %> text-center py-4 mr-3"
        style="width: 65px; background: <%= socialFollow.darkColor %>"
      ></i>
      <span class="font-weight-medium"> <%= socialFollow.info %> </span>
    </a>
    <% }) %>
  </div>
</div>
