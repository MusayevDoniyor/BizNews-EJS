<div class="container-fluid bg-dark pt-5 px-sm-3 px-md-5 mt-5">
  <div class="row py-4">
    <div class="col-lg-3 col-md-6 mb-5">
      <h5 class="mb-4 text-white text-uppercase font-weight-bold">
        Get In Touch
      </h5>

      <p class="font-weight-medium">
        <i class="fa fa-map-marker-alt mr-2"></i>123 Street, New York, USA
      </p>

      <p class="font-weight-medium">
        <i class="fa fa-phone-alt mr-2"></i>+012 345 67890
      </p>

      <p class="font-weight-medium">
        <i class="fa fa-envelope mr-2"></i>info@example.com
      </p>

      <h6 class="mt-4 mb-3 text-white text-uppercase font-weight-bold">
        Follow Us
      </h6>

      <div class="d-flex justify-content-start">
        <% footerSocialIconscClass.forEach(icon => { %>
        <a href="#" class="btn btn-lg btn-secondary btn-lg-square mr-2">
          <i class="fab <%= icon %>"></i>
        </a>
        <% }) %>
      </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-5">
      <h5 class="mb-4 text-white text-uppercase font-weight-bold">
        Popular News
      </h5>

      <% popularNewsInFooter.forEach((popularNews) => { %>
      <div class="mt-2">
        <div class="mb-2">
          <a
            class="badge badge-primary text-uppercase font-weight-semi-bold p-1 mr-2"
            href=""
          >
            <%= popularNews.title %>
          </a>

          <a class="text-body" href="">
            <small> <%= popularNews.date %> </small>
          </a>
        </div>

        <a class="small text-body text-uppercase font-weight-medium" href="">
          <%= popularNews.description %>
        </a>
      </div>
      <% }) %>
    </div>

    <div class="col-lg-3 col-md-6 mb-5">
      <h5 class="mb-4 text-white text-uppercase font-weight-bold">
        Categories
      </h5>

      <div class="m-n1">
        <% categories.forEach(category => { %>
        <a href="" class="btn btn-sm btn-secondary m-1"><%= category %></a>
        <% }); %>
      </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-5">
      <h5 class="mb-4 text-white text-uppercase font-weight-bold">
        Flickr Photos
      </h5>

      <div class="row">
        <% newsInFooter.forEach(news => {%>
        <div class="col-4 mb-3">
          <a href="">
            <img class="w-100" src="<%= news %>" alt="" />
          </a>
        </div>
        <%}); %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid py-4 px-sm-3 px-md-5" style="background: #111111">
  <p class="m-0 text-center">
    &copy; <a href="#">Doniyor</a>. All Rights Reserved. Design by

    <a href="https://htmlcodex.com">HTML Codex</a>
  </p>
</div>
<!-- Footer End -->

<!-- Back to Top -->
<a href="#" class="btn btn-primary btn-square back-to-top"
  ><i class="fa fa-arrow-up"></i>
</a>
